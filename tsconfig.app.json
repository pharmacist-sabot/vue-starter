{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "types": [
        "vitest/globals"
      ]
    },
    "strict": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.d.ts",
    "tests/**/*"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ]
}
